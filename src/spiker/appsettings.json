{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\log-.log",
          "rollingInterval": "Hour",
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "sampleapp"
    }
  }
}
